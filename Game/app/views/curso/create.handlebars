<div class="container">
    <h1>Adicionar Curso</h1>

    <form action="/curso/create" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="form-group">
            <label for="sigla" class="form-label mt-4">Sigla</label>
            <input type="text" class="form-control" id="sigla" name="sigla" placeholder="Informe a sigla do curso">
            <small id="siglalHelp" class="form-text text-muted">Em caso de dúvidas consulte o site da UFAM.</small>
            <div class="invalid-feedback">{{printError errors 'sigla'}}</div>
        </div>

        <div class="form-group">
            <label for="nome" class="form-label mt-4">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Informe o nome do curso">
            <div class="invalid-feedback">{{printError errors 'sigla'}}</div>
        </div>

        <div class="form-group">
            <label for="descricao" class="form-label mt-4">Descrição</label>
            <textarea class="form-control" id="descricao" name="descricao" rows="3"></textarea>
        </div>

        <fieldset class="form-group">
            <legend class="mt-4">Área da ciência</legend>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="areaId" id="areaId" value="1" checked="">
                    Ciências Exatas - Ex: Computação, Matemática, Estatística, etc.
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="areaId" id="areaId" value="2">
                    Ciências Humanas - Ex: Letras, História, Psicologia, etc.
                </label>
            </div>
            <div class="form-check disabled">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="areaId" id="areaId" value="3">
                    Ciências Biológicas - Ex: Medicina, Odonto, Agronomia, etc.
                </label>
            </div>
        </fieldset>

        <button type="submit" class="btn btn-primary mt-4">Adicionar Curso</button>

    </form>
</div>